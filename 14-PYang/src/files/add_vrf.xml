<config>
    <native xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
        <vrf>
            <definition>
                <name>{{name}}</name>
                <rd>{{rd_address}}:{{rd_port}}</rd>
                <address-family>
                    <ipv4/>
                </address-family>
                <route-target>
                    <export>
                        <asn-ip>{{asn_address}}:{{asn_port}}</asn-ip>
                    </export>
                    <import>
                        <asn-ip>{{asn_address}}:{{asn_port}}</asn-ip>
                    </import>
                </route-target>
            </definition>
        </vrf>
        <router>
            <bgp xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-bgp">
                <id>{{as_id}}</id>
                <address-family>
                    <with-vrf>
                        <ipv4>
                            <af-name>unicast</af-name>
                            <vrf>
                                <name>{{name}}</name>
                                <ipv4-unicast>
                                    <redistribute>
                                        <connected/>
                                    </redistribute>
                                </ipv4-unicast>
                            </vrf>
                        </ipv4>
                    </with-vrf>
                </address-family>
            </bgp>
        </router>
    </native>
</config>